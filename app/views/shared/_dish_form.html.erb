<%= form_for(@dish) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :serving %>
    <%= f.text_field :serving, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_area :description %>

  </div>
  <%= f.submit "Store", class: "btn btn-primary" %>
<% end %>
