
<h1> <%= @event.name %> </h1>
<p> Organizer: <%= @event.owner.name %></p>
<p> When: <%= @event.event_date %></p>
<p> Location: <%= @event.location %></p>
<p> <%= @event.description %> </p>

<% if owner? @event %>
  <div id="invitation-form" style="display:none;"></div>
  <%= link_to "Invite Guest!", new_invitation_path(id: @event.id), class: "btn btn-primary", remote: true %>
<% end %>
